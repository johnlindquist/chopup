{
  "name": "chopup",
  "version": "1.0.0",
  "description": "A tool to wrap long-running processes and chop their logs based on file changes.",
  "main": "dist/index.js",
  "bin": {
    "chopup": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
