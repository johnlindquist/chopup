    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:integration": "vitest run test/integration"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.17",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "npm-name": "^8.0.0",
    "tree-kill": "^1.2.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  }
}
